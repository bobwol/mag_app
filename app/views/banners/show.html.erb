<%- model_class = Banner -%>
<div class="page-header">
  <h1><%=t '.title', :default => Banner %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:title) %></dt>
      <dd><pre class="prettyprint"><%= @banner.title %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:banner_url) %></dt>
      <dd><pre class="prettyprint"><%= @banner.banner_url %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:banner_image_url) %></dt>
      <dd><pre class="prettyprint"><%= @banner.banner_image_url %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              banners_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_banner_path(@banner), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              banner_path(@banner),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

