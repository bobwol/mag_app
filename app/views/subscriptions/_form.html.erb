<%= simple_form_for(@subscription) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :plan_name %>
    <%= f.input :billing_cycle %>
    <%= f.input :payment_form %>
    <%= f.association :app %>
    <%= f.association :user %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
