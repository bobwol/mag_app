<%- model_class = Subscription -%>
<div class="page-header">
  <h1><%=t '.title', :default => Subscription %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:plan_name) %></dt>
      <dd><pre class="prettyprint"><%= @subscription.plan_name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:billing_cycle) %></dt>
      <dd><pre class="prettyprint"><%= @subscription.billing_cycle %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:payment_form) %></dt>
      <dd><pre class="prettyprint"><%= @subscription.payment_form %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              subscriptions_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_subscription_path(@subscription), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              subscription_path(@subscription),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

