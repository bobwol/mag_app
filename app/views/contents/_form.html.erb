<%= simple_form_for(@content) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :info %>
    <%= f.input :content_url %>
    <%= f.input :content_price %>
    <%= f.input :status %>
    <%= f.input :product_id %>
    <%= f.input :cover %>
    <%= f.input :hpub_url %>
    <%= f.input :content_id %>
    <%= f.association :app %>
    <%= f.association :user %>
    <%= f.input :publish_date %>
    <%= f.input :publish_platform %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
