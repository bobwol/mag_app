<%- model_class = Content -%>
<div class="page-header">
  <h1><%=t '.title', :default => Content %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:title) %></dt>
      <dd><pre class="prettyprint"><%= @content.title %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:info) %></dt>
      <dd><pre class="prettyprint"><%= @content.info %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:content_url) %></dt>
      <dd><pre class="prettyprint"><%= @content.content_url %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:content_price) %></dt>
      <dd><pre class="prettyprint"><%= @content.content_price %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:status) %></dt>
      <dd><pre class="prettyprint"><%= @content.status %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:product_id) %></dt>
      <dd><pre class="prettyprint"><%= @content.product_id %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:cover) %></dt>
      <dd><pre class="prettyprint"><%= @content.cover %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:hpub_url) %></dt>
      <dd><pre class="prettyprint"><%= @content.hpub_url %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:content_id) %></dt>
      <dd><pre class="prettyprint"><%= @content.content_id %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:publish_date) %></dt>
      <dd><pre class="prettyprint"><%= @content.publish_date %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:publish_platform) %></dt>
      <dd><pre class="prettyprint"><%= @content.publish_platform %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              contents_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_content_path(@content), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              content_path(@content),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

